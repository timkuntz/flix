<h1>Reviews for <%= link_to @movie.title, @movie %></h1>

<ul class="reviews">
  <% @reviews.each do |review| %>
    <li>
      <%= render "shared/stars", percent: review.stars_as_percent %>
      <%= pluralize(review.stars, 'star') %>
      <p>
        <%= review.name %>
        <span class="date">
          <%= time_ago_in_words(review.created_at) %> ago
        </span>
      </p>
      <p>
        <%= review.comment %>
      </p>
      <p>
        <%= link_to "Edit", edit_movie_review_path(@movie, review), class: "button" %>
        <%= link_to "Remove", movie_review_path(@movie, review), method: "delete", class: "button" %>
      </p>
    </li>
  <% end %>
</ul>